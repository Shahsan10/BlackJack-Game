{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Raylib Blackjack",
      "type": "shell",
      "command": "g++",
      "args": [
        "blackjack.cpp",
        "-o",
        "blackjack.exe",
        "-lraylib",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
